<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gold">

        <ImageView
            android:id="@+id/ivFlag"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/mx"
            app:layout_constraintBottom_toTopOf="@+id/ivPlayerImage"
            app:layout_constraintEnd_toStartOf="@+id/ivFifaLogo"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <ImageView
            android:id="@+id/ivFifaLogo"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="@+id/ivFlag"
            app:layout_constraintEnd_toStartOf="@+id/ivTeamShield"
            app:layout_constraintStart_toEndOf="@+id/ivFlag"
            app:layout_constraintTop_toTopOf="@+id/ivFlag" />

        <ImageView
            android:id="@+id/ivTeamShield"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/fmf"
            app:layout_constraintBottom_toBottomOf="@+id/ivFifaLogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivFifaLogo"
            app:layout_constraintTop_toTopOf="@+id/ivFifaLogo" />

        <ImageView
            android:id="@+id/ivPlayerImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/raul"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.68"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45"
            app:layout_constraintWidth_percent="0.5" />

        <TextView
            android:id="@+id/tvPlayerPosition"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/position_background"
            android:gravity="center"
            android:text="@string/shortPositionPlayer"
            android:theme="@style/Feed_Letters2"
            app:layout_constraintBottom_toBottomOf="@+id/ivPlayerImage"
            app:layout_constraintEnd_toStartOf="@+id/ivPlayerImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivPlayerImage"
            app:layout_constraintVertical_bias="0.25" />

        <ImageView
            android:id="@+id/ivJerseyIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_shirt_round"
            app:layout_constraintBottom_toBottomOf="@+id/ivPlayerImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivPlayerImage"
            app:layout_constraintTop_toTopOf="@+id/ivPlayerImage"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/tvJerseyNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/numberPlayer"
            android:theme="@style/Feed_Letters2"
            app:layout_constraintBottom_toBottomOf="@+id/ivJerseyIcon"
            app:layout_constraintEnd_toEndOf="@+id/ivJerseyIcon"
            app:layout_constraintStart_toStartOf="@+id/ivJerseyIcon"
            app:layout_constraintTop_toTopOf="@+id/ivJerseyIcon" />

        <View
            android:id="@+id/viewNameBackground"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/tvPlayerBirthDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.7" />

        <TextView
            android:id="@+id/tvPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shortNamePlayer"
            android:theme="@style/Menu_Title_White"
            app:layout_constraintBottom_toBottomOf="@+id/viewNameBackground"
            app:layout_constraintEnd_toEndOf="@+id/viewNameBackground"
            app:layout_constraintStart_toStartOf="@+id/viewNameBackground"
            app:layout_constraintTop_toTopOf="@+id/viewNameBackground" />

        <View
            android:id="@+id/viewBirthBackground"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/tvPlayerBirthDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.66" />

        <TextView
            android:id="@+id/tvPlayerBirthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:paddingVertical="0dp"
            android:text="@string/birthPlayer"
            android:theme="@style/Feed_Letters2_White"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/viewNameBackground"
            app:layout_constraintStart_toStartOf="@+id/viewNameBackground" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
